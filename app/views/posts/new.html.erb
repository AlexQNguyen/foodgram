<div style=" background: linear-gradient(#00cc99, white, white)">
  <div class="container">
    <nav class="navbar navbar-light bg-light">
        <img src="/assets/images/instafood.jpg" width="30" height="30" class="d-inline-block align-top" alt="">
      <h1>  InstaFood  </h1>
      <h6 style="text-align:right"><a href='/logout'>Sign Out</a></h6>
    </nav>
    <div style="text-align:center" class="row">
      <h3>Post By: <%= current_user.first_name %>!</h3>
      <a href='/users/<%= current_user.id %>/posts'> Home |</a>
      <a href='/users/<%= current_user.id%>/posts/new'> New Post |</a>
      <a href='/users/<%= current_user.id%>/posts/likes/show'> Post I liked </a>
    </div>
    <hr />
    <div style="width: 50%; display: inline-block; margin-left:33%; margin-right:33%" class="container">

        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <%= form_for (@post), url: post_path_url, html: { multipart: true } do |f| %><br />
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name %><br />
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description %><br />
        </div>
        <div class="form-group">
          <%= f.label :review %>
          <%= f.text_area :review%><br />
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image%>
        </div>
        <div>
            <button class="btn btn-primary"><%= f.submit %></button>
        </div>

        <% end %>

    </div>
</div>
