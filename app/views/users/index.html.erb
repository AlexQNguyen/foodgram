<div style=" background: linear-gradient(#00cc99, white, white)">
  <div class="container">
      <nav class="navbar navbar-light bg-light">
          <img src="/assets/images/instafood.jpg" width="30" height="30" class="d-inline-block align-top" alt="">
        <h1>  InstaFood  </h1>
        <h6 style="text-align:right"><a href='/users/login'>Already Registered?</a></h6>
      </nav>
      <hr />
    <div style="width: 50%; display: inline-block; margin-left:33%; margin-right:33%">
      <div class="col-xs-12 col-md-8" style=" padding:0px 15px 20px 15px; border: 6px groove #1affc6; border-radius:10px;">
      <h1>Create a User</h1>
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
        <p>
          <%= error %>
        </p>
          <% end %>
      <% end %>
      <% if flash[:notice] %>
        <p style="color:green"> <%= flash[:notice] %>  </p>
      <% end %>

      <form action='/register' method='post'>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="form-group">
          <label for="exampleInputEmail1">First Name:</label>
          <input type="text" class="form-control" name='user[first_name]'  >
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Last Name</label>
          <input type="text" class="form-control" name='user[last_name]' >
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">User Name</label>
          <input type="text" class="form-control" placeholder="Must be at least 6 Characters" name='user[user_name]' >
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" name='user[email]' >
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Password</label>
          <input type="password" class="form-control" name='user[password]' >
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Confirm Password</label>
          <input type="password" class="form-control" name='user[password_confirmation]' >
        </div>
        <button type="submit" class="btn btn-default">Register</button>
      </form>
    </div>
  </div>
</div>
